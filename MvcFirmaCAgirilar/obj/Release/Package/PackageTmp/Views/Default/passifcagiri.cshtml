@using MvcFirmaCAgirilar.Models.Entity
@model List<TblCagrilar>

@{
    ViewBag.Title = "passifcagiri";
    Layout = "~/Views/Shared/FiramalarLayout.cshtml";
}

<table class="table table-borderless">
<tr>
    <th>ID</th>
    <th>Başlıq</th>
    <th>Tarix</th>
    
    <th>Ətraflı</th>
</tr>
@foreach (var x in Model)
{
