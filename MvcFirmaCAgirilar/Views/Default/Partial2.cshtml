@using MvcFirmaCAgirilar.Models.Entity
@model List<TblCagrilar>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-bell-o"></i><span class="badge blue">@ViewBag.cagrisay</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>Ativ Müraciətər: @ViewBag.cagrisay</h3>
            </div>
        </li>
        @foreach (var x in Model) 
        {
          <li>
              <a href="/Default/CagiriDetaylar/@x.ID" class="grid">
                  <div class="user_img"><img src="@x.TblFirma.Gorsel" alt=""></div>
                  <div class="notification_desc">
                      <p>@x.Konu</p>
                      <span>@x.Tarih</span>
                  </div>
              </a>
          </li>
        }

        <li>
            <div class="notification_bottom">
                <a href="/Default/Actifcagiri" class="bg-primary">Bütün Müraciətlərə Bax</a>
            </div>
        </li>
    </ul>
</li>
